<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- default -->
    <item android:color="#83FFE6">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#83FFE6" />
            <gradient android:angle="-90" android:startColor="#83FFE6" android:endColor="#FFE6AB"  />
        </shape>

        <!-- after press -->
        <item android:state_pressed="true">
            <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
            <shape android:shape="rectangle">
                <!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->
                <corners android:radius="15dip" />
                <!--邊框-->
                <stroke android:width="1dip" android:color="#BA84EF" />
                <!--漸層顏色-->
                <gradient android:angle="-90" android:startColor="#BA84EF" android:endColor="#d0ff33ee"  />
            </shape>
        </item>
    </item>
</selector>